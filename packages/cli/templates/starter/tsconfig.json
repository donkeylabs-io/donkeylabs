{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "preserveSymlinks": true,
    "baseUrl": ".",
    "paths": {
      "$server/*": [".@donkeylabs/server/*"],
      "$api": [".@donkeylabs/server/client"]
    }
  },
  "include": [
    "src",
    ".@donkeylabs/server"
  ],
  "exclude": [
    "node_modules"
  ]
}